<div class="flex-none h-full bg-primary-content w-72">
    <%= render "shared/sidebar" %>
</div>
<div class="overflow-hidden grow">
    <% if notice.present? %>
        <p class="bg-green-500 notice"><%= notice %></p>
    <% end %>
    <div class="flex items-center justify-center h-screen">
        <div class="flex flex-col items-center justify-center h-screen">
            <div class="flex flex-col items-center justify-center bg-yellow-100 rounded-2xl w-96 h-60">
                <h1 class="py-4 text-xl font-semibold text-center text-black bg-yellow-500 w-96">Edit Category</h1>
                <div class="py-3">
                <%= render 'form', category: @category %>
                <div>
                <div class="mb-12 text-center">
                    <%= link_to "See Categories", categories_path, class: "link link-secondary text-base font-medium" %> 
                </div>
            </div>
        </div> 
    </div>
</div>


