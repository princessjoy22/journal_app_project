<%= render "shared/sidebar" %>
<div class="overflow-hidden grow">
    <% if notice.present? %>
        <div role="alert" class="alert alert-success">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 stroke-current shrink-0" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            <span><%= notice %></span>
        </div>
    <% end %>
    <div class="flex flex-col items-center justify-center h-screen">
        <div class="flex flex-col items-center justify-center bg-pink-200 shadow-2xl rounded-2xl w-96 h-60">
            <h1 class="py-4 text-xl font-semibold text-center text-white bg-neutral w-96">Create Category</h1>
            <div class="py-3">
            <%= render 'form', category: @category %>
            <div>
            <div class="mb-12 text-center">
                <%= link_to "See Categories", categories_path, class: "link link-primary text-base font-medium" %> 
            </div>
        </div>
    </div>
</div>