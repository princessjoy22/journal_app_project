<div class="flex-none h-full bg-primary-content w-72">
    <%= render "shared/sidebar" %>
</div>
<div class="overflow-hidden grow">
    <% if notice.present? %>
        <p class="bg-green-500 notice"><%= notice %></p>
    <% end %>
    <div class="flex items-center justify-center h-screen">
        <div class="w-full h-full">
            <div class="flex flex-row items-end justify-start w-full pl-12 bg-red-400 h-36">
                <div class="mb-4 text-5xl font-black text-white">
                    <%= @category.name %>
                </div>
                <div class="flex items-center justify-center h-10 m-4 text-black bg-yellow-300 rounded-full md:hover:font-bold w-28 md:hover:h-11 md:hover:w-32">
                    <%= link_to "+ Add Task", new_category_task_path(@category)%>
                </div>
            </div>
            // FIXME: 
            <div class="flex flex-col items-center justify-center h-4/6">
                <div class="h-4/6">
                    <%= render "tasks/task_list" %>
                </div>
            </div>
        </div> 
    </div>
</div>