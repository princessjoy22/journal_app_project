<%= render "shared/sidebar" %>
<div class="overflow-hidden grow">
    <% if notice.present? %>
        <p class="bg-green-500 notice"><%= notice %></p>
    <% end %>
    <div class="flex items-center justify-center h-screen">
        <div class="flex flex-col items-center justify-center h-screen">
            <div class="flex flex-col items-center justify-center h-auto bg-pink-200 shadow-2xl rounded-2xl w-96">
                <h1 class="py-4 text-xl font-semibold text-center text-white bg-neutral w-96">Edit Task</h1>
                <div class="py-3">
                    <%= render 'form', task: @task %>
                <div>
                <div class="mb-12 text-center">
                    <%= link_to "Back to Tasks", category_path(@category), class: "link link-primary text-base font-medium" %> 
                </div>
            </div>
        </div> 
    </div>
</div>