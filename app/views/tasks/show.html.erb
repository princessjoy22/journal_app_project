<%= render "shared/sidebar" %>
<div class="overflow-hidden grow">
    <% if notice.present? %>
        <p class="bg-green-500 notice"><%= notice %></p>
    <% end %>
    <div class="flex justify-center h-screen">
        <div class="w-1/3 p-4 mt-40 border-solid rounded shadow-2xl h-72 border-neutral">
            <div class="flex justify-end pr-8 text-base">
                <%= @task.date %>
            </div>
            <div class="">
                <div>
                    <div class="pb-2 text-2xl font-bold">
                        <%= @task.title %>
                    </div>
                    <div class="h-32 pb-3 text-xl">
                        <%= @task.description %>
                    </div>
                </div>
                <div>
                    <div class="text-center">
                        <div><%= link_to "<< Back to task", category_path(@category) %></div>
                    </div> 
                </div>
            </div>
        </div>  
    </div>
</div>
